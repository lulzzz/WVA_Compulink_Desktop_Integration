                <EasingDoubleKeyFrame KeyTime="0:0:1.8" Value="-36"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.9" Value="-39"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="-40.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2.1" Value="-39"/>
